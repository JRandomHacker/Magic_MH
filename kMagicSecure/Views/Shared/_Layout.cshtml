					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Magic", "Index", new { controller = "Magic", action = "Default"}, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li class="dropdown">
						<a href="#" data-toggle="dropdown" class="dropdown-toggle">KLD<b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("KLD(1)", "Index", new { controller = "Magic", action = "Index", eventName = "KLD", round = 1 })</li>
							<li>@Html.ActionLink("KLD(2)", "Index", new { controller = "Magic", action = "Index", eventName = "KLD", round = 2 })</li>
							<li>@Html.ActionLink("KLD(3)", "Index", new { controller = "Magic", action = "Index", eventName = "KLD", round = 3 })</li>
							<li>@Html.ActionLink("KLD(*)", "Index", new { controller = "Magic", action = "Index", eventName = "KLD", round = 0 })</li>
							<li>@Html.ActionLink("KLD(Top 8)", "Index", new { controller = "Magic", action = "Index", eventName = "KLD", round = 4 })</li>
						</ul>
					</li>
					<li class="dropdown">
